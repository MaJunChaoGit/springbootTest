<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mjc.realtime.mapper.UserMapper">
    <select id="dataCount" resultType="int" parameterType="string">
        SELECT IFNULL(count(*),0) FROM ${_parameter}
    </select>

    <select id="getUsers" resultType="user" parameterType="userParamVo">
        SELECT
        user_id,
        `name`,
        pwd,
        salt
        FROM
        users
        <where>
            <if test="name != null and name !=''">and `name` = #{name}</if>
            <if test="pwd != null and pwd !=''">and pwd = #{pwd}</if>
        </where>
    </select>
</mapper>